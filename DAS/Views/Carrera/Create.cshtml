@model DAS.Models.CarreraViewModel.CarreraViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Carrera", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-12">
            @Html.LabelFor(d => d.Name)
            @Html.TextBoxFor(d => d.Name, new { @class = "form-control form-control-lg" })
            @Html.ValidationMessage("Name", new { @class = "text-danger" })
            <br />

            @Html.LabelFor(d => d.Objetivo)
            @Html.TextAreaFor(d => d.Objetivo, new { @class = "form-control", rows = "3" })
            @Html.ValidationMessage("Objetivo", new { @class = "text-danger" })
            <br />

            @Html.LabelFor(d => d.Perfil)
            @Html.TextAreaFor(d => d.Perfil, new { @class = "form-control form-control-lg" })
            @Html.ValidationMessage("Perfil", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(d => d.Area)
            @Html.TextAreaFor(d => d.Area, new { @class = "form-control form-control-lg" })
            @Html.ValidationMessage("Area", new { @class = "text-danger" })
            <br />

            @Html.Label("Tipo Carrera")
            @Html.DropDownList("TipoList", null, new { @class = "form-select form-select-lg mb-3" })
            <br />
            <div class="form-group">
                @Html.LabelFor(d => d.File)
                @Html.TextBoxFor(d => d.File, new { type = "file", accept = "application/pdf", @class = "form-control form-control-lg" })
                @Html.ValidationMessage("File", new { @class = "text-danger" })
            </div>
            <br />
            <div class="d-flex justify-content-end">
                <input type="submit" class="btn btn-success  btn-lg" value="Guardar" />
            </div>
        </div>
    </div>

}