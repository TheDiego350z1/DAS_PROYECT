<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Universidad Don Bosco</title>
    <link rel="icon" type="image/x-icon" href="https://www.udb.edu.sv/udb/public/img/iconos/udb.ico">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary barra-navegacion">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="~/Img/logo_universidaddonbosco.png" alt="" width="30" height="24"
                         class="d-inline-block align-text-top logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/ShowCarreras">Carreras</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Consulta">Consultas</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container body-content ">
        @RenderBody()
        <hr />
        <!--Footer-->

    </div>

    <footer class="foot bg-primary" id="pie-page">
        <div class="container">
            <div class="row">
                <div class="col-md-4 d-flex align-items-lg-center" id="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3876.02708186949!2d-89.1516807851699!3d13.716809590370126!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8f633766301b1307%3A0x4ed6e59668a0584c!2sColegio%20Don%20Bosco!5e0!3m2!1ses!2ssv!4v1637890255489!5m2!1ses!2ssv"
                            width="300s" height="180" style="border:10px;" allowfullscreen="" loading="lazy"></iframe>
                </div>
                <div class="col-md-4 d-flex align-items-center">
                    <div class="container">
                        <div class="row">
                            <p class="titulo-footer">
                                Todos los derechos reservados.
                            </p>
                            <p class="titulo-footer">
                                Copyright © 2021
                            </p>
                            <p class="titulo-footer">
                                DI Desing
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 d-flex justify-content-between align-items-lg-center">
                    <a href="#">
                        <img src="~/Img/foot_social/facebook.svg" width="75" height="75">
                    </a>
                    <br>
                    <a href="#">
                        <img src="~/Img/foot_social/instagram.svg" width="75" height="75">
                    </a>
                    <a href="#">
                        <img src="~/Img/foot_social/whatsapp.svg" width="75" height="75">
                    </a>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")

    <script src="~/Scripts/bootstrap.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
