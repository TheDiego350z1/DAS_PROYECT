@model DAS.Models.AccessViewModel.AccessViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Access.cshtml";
}

@using (Html.BeginForm("Entry", "Access", FormMethod.Post))
{
    <div class="d-flex justify-content-center">
        <div class="col-6">
            <h2>Ingresar</h2>
            <div class="mb-3 row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(d => d.Mail, new { @class= "form-control" })
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    @Html.PasswordFor(d => d.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <input type="submit" class="btn btn-success btn-lg" value="Ingresar" />
            </div>
        </div>
    </div>

}

