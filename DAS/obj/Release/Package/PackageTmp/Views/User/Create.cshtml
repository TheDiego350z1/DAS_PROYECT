@model DAS.Models.UserViewModel.UserViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div class="row">
    @using (Html.BeginForm("Create", "User", FormMethod.Post))
    {
        <div class="col-md-12">
            @Html.AntiForgeryToken()

            @Html.ValidationMessage("Error", new { @class = "Text-danger" })

            @Html.LabelFor(d => d.Name)
            @Html.TextBoxFor(d => d.Name, new { @class = "form-control form-control-lg" })
            @Html.ValidationMessage("Name", new { @class = "text-danger" })
            <br />

            @Html.LabelFor(d => d.Mail)
            @Html.TextBoxFor(d => d.Mail, new { @class = "form-control form-control-lg" })
            @Html.ValidationMessage("Mail", new { @class = "text-danger" })
            <br />

            @Html.LabelFor(d => d.PassWord)
            @Html.PasswordFor(d => d.PassWord, new { @class = "form-control form-control-lg" })
            @Html.ValidationMessage("PassWord", new { @class = "text-danger" })
            <br />

            @Html.LabelFor(d => d.ConfirmPassWord)
            @Html.PasswordFor(d => d.ConfirmPassWord, new { @class = "form-control form-control-lg" })
            @Html.ValidationMessage("ConfirmPassWord", new { @class = "text-danger" })
            <br />

            <div class="d-flex justify-content-end">
                <input type="submit" class="btn btn-success  btn-lg" value="Guardar" />
            </div>
        </div>
    }
</div>